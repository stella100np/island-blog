---
import BaseHead from "../components/BaseHead.astro";
import BlogHeader from "../components/BlogHeader.astro";
import BodyLayout from "./BodyLayout.astro";
export interface Props {
    title: string;
    description: string;
    spokenLang?: string;
}
const { spokenLang = "zh-CN", title, description } = Astro.props as Props
---

<html lang={spokenLang}>
<BaseHead title={title} description={description}></BaseHead>
<BodyLayout>
    <BlogHeader />
    <main class="max-w-[52rem] mx-auto px-4 pb-28 sm:px-6 md:px-8 xl:px-12 lg:max-w-6xl">
        <slot></slot>
    </main>
</BodyLayout>

</html>