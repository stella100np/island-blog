---
import type { Page } from "astro";
import Icon from "astro-icon";
export interface Props {
    page: Page;
}
const { page } = Astro.props as Props;
---

<div class="flex justify-center md:justify-between py-6 gap-2 ">
    {page.url.prev ? (<a class="action__go-to-x text-sky-600 dark:text-sky-400 bg-sky-400/10 hover:bg-sky-400/20 "
        href={page.url.prev} title="Go to Previous">
        <Icon name="heroicons-outline:arrow-left" class='h-5'></Icon> <span>Prev</span>
    </a>) : (<div class="action__go-to-x text-slate-600 bg-slate-400/10  cursor-not-allowed ">
        <Icon name="heroicons-outline:arrow-left" class='h-5'></Icon> <span>Prev</span>
    </div>)}

    <div>
        <span class=" text-sky-500">{page.currentPage}</span> {`/`}
        <span>{page.lastPage}</span>
    </div>

    {page.url.next ? (<a class="action__go-to-x text-sky-600 dark:text-sky-400 bg-sky-400/10 hover:bg-sky-400/20  "
        href={page.url.next} title="Go to Next"><span>Next</span>
        <Icon name="heroicons-outline:arrow-right" class='h-5'></Icon>
    </a>) : (<div class="action__go-to-x text-slate-600 bg-slate-400/10  cursor-not-allowed"><span>Next</span>
        <Icon name="heroicons-outline:arrow-right" class='h-5'></Icon>
    </div>)
    }
</div>
<style>
    .action__go-to-x {
        @apply ml-3 text-base leading-5 font-medium rounded-full py-2 px-3 space-x-1 flex
    }
</style>